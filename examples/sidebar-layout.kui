// Sidebar layout using unequal grid divisions
ratio: 16:9
grid: 3x3
col-widths: [1, 3, 1]
row-heights: [1, 4, 1]
gap: 8

// Header
A1..C1: { type: txt, value: "Dashboard", align: center, bg: "#3B82F6" }

// Sidebar
A2: { type: txt, value: "Menu\nItem 1\nItem 2\nItem 3", bg: "#f0f0f0" }

// Main content
B2: { type: box, bg: "#ffffff", border: "#ccc" }

// Right panel
C2: { type: txt, value: "Info", bg: "#f0f0f0" }

// Footer
A3..C3: { type: txt, value: "Footer", align: center, bg: "#e0e0e0" }
